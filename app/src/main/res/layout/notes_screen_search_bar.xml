<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notesScreenSearchBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/search_bar_background"
    android:gravity="center_vertical">

    <!-- Hamburger Icon (Opens Drawer) -->
    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_menu"
        android:contentDescription="Open Menu"/>

    <!-- Search EditText -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints="none"
        android:hint="Search your notes"
        android:background="@null"
        android:inputType="textAutoCorrect"
        android:textSize="16sp"
        android:padding="10dp"/>

    <!-- Grid/List Toggle (Placeholder for future use) -->
    <ImageView
        android:id="@+id/iv_toggle_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:src="@drawable/list_view"
        android:contentDescription="Toggle View"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/account"
        android:contentDescription="Profile Icon"
        app:shapeAppearanceOverlay="@style/CircleShape"
        android:layout_marginStart="10dp"/>
</LinearLayout>
