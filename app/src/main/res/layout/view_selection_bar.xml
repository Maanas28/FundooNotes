<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btnCloseSelectionSelectionBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_icon"
        android:contentDescription="Close selection" />

    <!-- Selected count -->
    <TextView
        android:id="@+id/tvSelectedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="32dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <!-- BIN ACTION: Restore -->
    <ImageButton
        android:id="@+id/btnRestoreSelected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:tint="#1064B2"
        android:layout_marginEnd="26dp"
        android:scaleType="centerInside"
        android:src="@drawable/restore"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Restore" />

    <!-- DEFAULT ACTION: Label -->
    <ImageButton
        android:id="@+id/btnLabelSelectionBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginEnd="26dp"
        app:tint="#1064B2"
        android:scaleType="centerInside"
        android:src="@drawable/label"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Label" />

    <!-- DEFAULT ACTION: Archive / Unarchive -->
    <ImageButton
        android:id="@+id/btnArchiveSelectionBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginEnd="26dp"
        app:tint="#1064B2"
        android:scaleType="centerInside"
        android:src="@drawable/archive"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Archive" />

    <!-- Common: More / Delete Forever -->
    <ImageButton
        android:id="@+id/btnMoreSelectedSelectionBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:tint="#1064B2"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="More options"
        android:scaleType="centerInside"
        android:src="@drawable/more_vert" />
</LinearLayout>
