<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="closeButton"
            android:src="@drawable/close"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/textViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit labels"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginStart="110dp"/>

    </LinearLayout>

    <!-- Create Label Row: Static (Tap to add) -->
    <LinearLayout
        android:id="@+id/staticAddRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/btnAddLabel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"
            android:contentDescription="Add Label" />

        <TextView
            android:id="@+id/createNewLabel_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Create new label"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- Create Label Row: Editable Input (Initially hidden) -->
    <LinearLayout
        android:id="@+id/editableAddRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnCancelLabel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"
            android:contentDescription="Cancel Label" />

        <EditText
            android:id="@+id/labelInputField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Create new label"
            android:inputType=""
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnConfirmLabel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tick"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"
            android:contentDescription="Confirm Label" />
    </LinearLayout>

    <!-- List of labels -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLabels"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />

</LinearLayout>
