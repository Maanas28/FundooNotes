<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.features.archive.ArchiveFragment">

    <!-- Main archive layout -->
    <LinearLayout
        android:id="@+id/archiveMainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top bar container -->
        <FrameLayout
            android:id="@+id/archiveTopBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Search bar -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/searchBarContainerArchive"
                android:name="com.example.fundoonotes.UI.components.SearchBarFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Selection bar (initially hidden) -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/selectionBarContainerArchive"
                android:name="com.example.fundoonotes.UI.components.SelectionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Notes grid -->
        <FrameLayout
            android:id="@+id/archiveNotesGridContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <!-- Fullscreen container for label fragment -->
    <FrameLayout
        android:id="@+id/fullscreenFragmentContainerArchive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
