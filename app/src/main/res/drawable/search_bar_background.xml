<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8A8A8A"/>
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <padding android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Border -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#D1D1D1"/> <!-- Light gray border -->
        </shape>
    </item>

</layer-list>
